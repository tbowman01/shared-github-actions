{
  "name": "shared-github-actions",
  "version": "1.0.0",
  "description": "Shared GitHub Actions with Claude-Flow SPARC integration for intelligent CI/CD automation",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint tests/**/*.js scripts/**/*.js",
    "lint:fix": "eslint tests/**/*.js scripts/**/*.js --fix",
    "build": "npm run lint && npm run test",
    "sparc:dev": "npx claude-flow sparc run dev",
    "sparc:test": "npx claude-flow sparc run test",
    "sparc:tdd": "npx claude-flow sparc tdd",
    "actions:test": "npm run test -- --testPathPattern=tests/integration",
    "actions:validate": "node scripts/validate-actions.js"
  },
  "keywords": [
    "github-actions",
    "ci-cd",
    "claude-flow",
    "sparc",
    "automation",
    "reusable-workflows"
  ],
  "author": "Shared GitHub Actions Team",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.1",
    "@actions/tool-cache": "^2.0.1",
    "axios": "^1.6.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nock": "^13.4.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tbowman01/shared-github-actions.git"
  }
}
